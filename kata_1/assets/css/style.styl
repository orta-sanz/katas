@import 'nib'

body
	background-color #00c

div
	width 200px
	height 200px
	margin 100px auto
	span
		display block
		width 100%
		height 100%
		background-color #fff
		border-radius 100%
		animation scaleout 2s infinite ease-in-out
		transform scale(1.0)
		&:hover
			animation para 1s

@keyframes para
	to
		background url("../images/skyrim.png") center center no-repeat
		background-size contain
		animation-play-status paused

@keyframes scaleout
	from
		transform scale(0.0)
	to
		transform scale(1.0)
		opacity 0

